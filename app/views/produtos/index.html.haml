.container
  %h1 Lista de produtos
  %table.table 
    %tr
      %th Nome
      %th
      %th
      %th
    - @produtos.each do |produto|
      %tr
        %td= produto.nome
        %td= link_to 'Mostrar', produto
        %td= link_to 'Editar', edit_produto_path(produto)
        %td= link_to 'Apagar', produto, method: :delete, data: { confirm: 'Tem certeza?' }
  %br/
  = link_to 'Novo Produto', new_produto_path